<!DOCTYPE html>
<html>   
   <body>
      <main>
         <section class="upperSection">
            <figure class="cinemaSeats">
               <img
                  class="picUnderNav"
                  src="public/seats.png"
                  alt="Image under the navbar not fount!" />
            </figure>
           <!-- <button type="button" class="allMoviesBtn">Show all movies</button>-->
         </section>
         <section class="mid">
            <section class="filterSection">
               <form>
                  <!--
         Here goes the filter menu.
         -->
               </form>
            </section>
            <section class="allMovies">
               <h2 class="topTitle">All Movies</h2>
               <figure class="movies">
                  <!-- Here goes the movies -->
                  {{#each movies}}
                  <article id="" class="movieWrapper">
                     <img class="movieImage" alt="a movie" src="{{this.image.url}}">
                     <h2 class="movieCardHeader">
                        {{ this.title }}
                     </h2>
                     <a class="movieBtn hoverEffect" href="/movies/{{this.id}}">
                        <span class="movieBtnSpan">Köp biljett</span>
                        <i class="fa-solid fa-money-bill-wave" aria-hidden="true"></i>
                     </a>
                  </article>
                  {{/each}}
               </figure>
            </section>
            <section class="extraSection">
               <!-- here goes all the cards like present card 4DX!...-->
            </section>
         </section>
         <section class="lowerSection">
            <figure class="upComingMovies">
               <!--up coming movies here-->
            </figure>
            <div class="upComingEvents">
               <!--All the events here-->
               <hr class="eventLine" />
               <h2>Kommande evenemang</h2>
               <div class="cardsContainer">
                  <div class="eventCard">
                     <img
                        class="eventImg"
                        src="public/event1.png"
                        alt="Event image not found" />
                     <p class="eventInfo">
                        Here goes the information about event
                     </p>
                     <button id="eventBtn" class="fa-solid fa-film">
                        Ticket
                     </button>
                  </div>
                  <div class="eventCard">
                     <img
                        class="eventImg"
                        src="public/event2.png"
                        alt="Event image not found" />
                     <p class="eventInfo">
                        Here goes the information about event
                     </p>
                     <button id="eventBtn" class="fa-solid fa-film">
                        Ticket
                     </button>
                  </div>
               </div>
            </div>
         </section>
      </main>

      <section class="skiReviewerSection">
         <figure>
            <img
               src="./public/skier.png"
               alt="Skidåkare som ser på bio"
               class="skiReviewer" />
            <blockquote>Oerhört mäktigt</blockquote>
            <figcaption>-Stig Helmer</figcaption>
         </figure>
         <figure>
            <img
               src="./public/skierTwo.png"
               alt="Skidåkare som ser på bio"
               class="skiReviewer" />
            <blockquote>Helt underbar helg</blockquote>
            <figcaption>-Johan Jonsson</figcaption>
         </figure>
         <figure>
            <img
               src="./public/skierThree.png"
               alt="Skidåkare som ser på bio"
               class="skiReviewer" />
            <blockquote>Fantastiskt!</blockquote>
            <figcaption>-Frida Karlsson</figcaption>
         </figure>
      </section>
   </body>
</html>
